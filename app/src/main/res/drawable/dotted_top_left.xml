<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape>

            <stroke
                android:width="1dp"
                android:color="@color/colorTextDisable"
                android:dashGap="10px"
                android:dashWidth="20px"/>
        </shape>
    </item>
    <item
        android:left="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="@color/colorBackground_Actionbar"></solid>

            <padding
                android:left="2dp"
                android:top="2dp"
                />
        </shape>
    </item>
</layer-list>