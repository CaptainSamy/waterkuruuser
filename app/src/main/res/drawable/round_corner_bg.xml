<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    ><!-- android:shape="" 表示是圆角矩形还是椭圆等等 -->
    <solid android:color="@color/colorBackground_Actionbar"/> <!-- 背景颜色 -->

    <!-- padding 表示内部空间距离背景图片内部边距 的距离 -->

    <stroke
        android:width="0.0dp"
        android:color="@color/colorBackground_Actionbar"/> <!-- 图片边框属性 -->
    <corners android:radius="15dp"/> <!-- 圆角的程度 -->

</shape>