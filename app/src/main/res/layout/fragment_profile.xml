<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/header_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/loading"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header_picture"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarStore"
            android:layout_width="@dimen/header_logo_size"
            android:layout_height="@dimen/header_logo_size"
            android:layout_gravity="bottom"
            android:src="@drawable/loading"
            app:civ_border_color="@color/blumine"
            app:civ_border_width="1dp"
            />

        <TextView
            android:id="@+id/storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatarStore"
            android:layout_toEndOf="@+id/avatarStore"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            />

    </RelativeLayout>


    <WebView
        android:id="@+id/webInfoStore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_picture"
        android:layout_weight="2"/>

</RelativeLayout>