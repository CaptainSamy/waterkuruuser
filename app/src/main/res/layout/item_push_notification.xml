<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/itemPush"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iconNotification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        app:civ_border_color="@color/color_line"
        app:civ_border_width="1dp"
        />

    <RelativeLayout
        android:id="@+id/layoutInfoNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/title_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:text="夏お得のキャンベーン AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1AA1"
            android:textColor="@color/colorTextMain"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_notification"
            android:layout_marginTop="4dp">


            <LinearLayout
                android:id="@+id/layoutTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/clock"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/clock"/>

                <TextView
                    android:id="@+id/time_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/clock"
                    android:paddingLeft="4dp"
                    android:textSize="10sp"/>
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>

