<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logoStore"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:civ_border_color="@color/color_line"
        app:civ_border_width="1sp" />

    <TextView
        android:id="@+id/storeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/switchView"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/logoStore"
        android:layout_centerVertical="true"
        android:text="123"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listViewStore"
        android:layout_alignBottom="@+id/listViewStore"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical" />

</RelativeLayout>
