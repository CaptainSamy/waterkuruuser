<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rlStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dotted_bottom_right_">

    <TextView
        android:id="@+id/tvIndex"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="1"
        android:textColor="@color/colorTextDisable"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        />


    <TextView
        android:id="@+id/tvStampChecked"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/tvIndex"
        android:layout_alignEnd="@+id/tvIndex"
        android:layout_alignStart="@+id/tvIndex"
        android:layout_alignTop="@+id/tvIndex"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:background="@drawable/circle_stamp"
        android:gravity="center"
        android:text="04/01"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/rlRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvIndex"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvIndex"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/rating"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/rating"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_red_button"
            android:gravity="center"
            android:paddingBottom="1.5dp"
            android:paddingTop="1.5dp"
            android:singleLine="true"
            android:text="@string/rating"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="visible"/>

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:visibility="invisible"
            app:srb_borderColor="@color/colorBorderText"
            app:srb_fillColor="@color/colorAccent"
            app:srb_isIndicator="true"
            app:srb_numberOfStars="5"
            app:srb_rating="5"
            app:srb_starBackgroundColor="@color/colorBorderText"
            app:srb_starBorderWidth="0.1"
            app:srb_starCornerRadius="0.1"
            />
    </RelativeLayout>
</RelativeLayout>
