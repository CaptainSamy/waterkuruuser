<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:weightSum="1">


    <ImageView
        android:id="@+id/tvLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutInfo"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon_introduction"/>


    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutButton"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvHowToUsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/how_to_used_1"
            android:textColor="@color/colorTextMain"
            android:textSize="22dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHowToUsed"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/how_to_used_2"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutOnline"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLogin"
            style="@style/ViewBorderTheme"
            android:background="@drawable/bg_red_button"
            android:gravity="center"
            android:text="@string/button_login"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvRegisterAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLogin"
            android:background="@drawable/bg_cydia_button"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:text="@string/register_account"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutOnline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageLoginFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/facebook"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/facebook"/>

        <ImageView
            android:id="@+id/imageLoginTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@color/twitter"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:src="@drawable/twitter"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imageSignInGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorMain"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:src="@drawable/google"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/buttonLoginTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/buttonLoginFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>
