<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iconNotification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/layoutInfoNotification"
            android:layout_alignTop="@+id/layoutInfoNotification"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_app"/>

        <RelativeLayout
            android:id="@+id/layoutInfoNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iconNotification"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/title_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="夏お得のキャンベーン AA1"
                android:textColor="@color/colorTextMain"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/layoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_notification"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layoutTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/clock"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/clock"/>

                    <TextView
                        android:id="@+id/time_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/clock"
                        android:paddingLeft="4dp"
                        android:text="12：00"
                        android:textSize="12sp"/>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutTime"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/body_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="XXXXXXXXXX　"
                        android:textColor="@color/colorTextMain"
                        android:textSize="14sp"/>
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/buttonRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/layoutContent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_rating_notification"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="@string/rating"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>


</ScrollView>

