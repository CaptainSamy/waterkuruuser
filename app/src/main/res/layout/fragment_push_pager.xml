<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/tools"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorBackground_Actionbar"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_indicator_margin_left="5dp"
        tl:tl_indicator_margin_right="5dp"
        tl:tl_indicator_style="BLOCK"
        tl:tl_textSelectColor="@color/white"
        tl:tl_textUnselectColor="@color/colorPrimary"
        tl:tl_textsize="14sp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/push_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tablayout"/>

</LinearLayout>