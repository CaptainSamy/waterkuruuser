<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <jp.co.wssj.iungo.widget.LoadMoreRecyclerView
        android:id="@+id/rcTimeLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray"
        />


    <RelativeLayout
        android:id="@+id/layoutActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:clickable="true">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@drawable/ic_back"/>

        <ImageView
            android:id="@+id/ivAvatarActionBar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivBack"/>

        <TextView
            android:id="@+id/tvActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/ivAvatarActionBar"
            android:text="@string/title_age"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="invisible"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTextDisable"
            android:visibility="gone"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <jp.co.wssj.iungo.widget.KenBurnsView
            android:id="@+id/header_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/picture0"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/header_logo"
            android:layout_width="@dimen/header_logo_size"
            android:layout_height="@dimen/header_logo_size"
            android:layout_gravity="bottom"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/picture0"
            app:civ_border_color="@color/color_gray_press"
            app:civ_border_width="1dp"/>

        <TextView
            android:id="@+id/titleActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="100dp"
            android:text="@string/title_age"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </FrameLayout>


</FrameLayout>
