<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-150dp"
                tools:context=".screens.MainActivity">

    <TextView
        android:id="@+id/tvCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:textColor="@color/colorTextMain"
        android:textStyle="bold"/>

    <wssj.co.jp.point.widget.CircularProgressBar
        android:id="@+id/circle_progress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:progress="1.0"/>

    <ImageView
        android:id="@+id/imageStore"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/waiting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerInParent="true"
        android:text="@string/waiting_store_confirm_checkin"
        android:textColor="@color/colorTextMain"
        android:textSize="25sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle_progress">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="しばらくお待ちください "
                android:textColor="@color/colorTextMain"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorTextDisable"/>

            <TableRow>

                <TextView
                    style="@style/styleTextWaiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="お客様の番号"/>

                <TextView
                    android:id="@+id/tvPositionCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorTextDisable"/>

            <TableRow>

                <TextView
                    style="@style/styleTextWaiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ただ今お待ち人数"/>

                <TextView
                    android:id="@+id/tvNumberCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorTextDisable"/>

            <TableRow>

                <TextView
                    style="@style/styleTextWaiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="お呼出までの目安時間"/>

                <TextView
                    android:id="@+id/tvTimeWaiting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorTextDisable"/>

        </TableLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/expand_wait_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/circle_progress"
        android:layout_marginTop="20dp"
        android:alpha="0"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/expand_waiting_confirm_checkin"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/finish_wait_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerInParent="true"
        android:alpha="0.0"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:src="@drawable/ic_check"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:text="OK"/>
    </LinearLayout>


</RelativeLayout>
