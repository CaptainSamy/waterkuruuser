<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="editTextStyle">@style/NullCursorColorEditText</item>
    </style>

    <style name="NullCursorColorEditText" parent="android:Widget.EditText">
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppTheme.ProgressDialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_edit_text</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="ViewBorderTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_edit_text</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>


    <style name="MyCustomTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="TextViewError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/colorMain</item>
        <item name="android:textSize">14dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="styleTextDetailStore">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@color/colorBackground_Actionbar</item>
    </style>

    <style name="styleTextWaiting">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@color/colorBackground_Actionbar</item>
    </style>

    <style name="styleRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating</item>
    </style>
</resources>
